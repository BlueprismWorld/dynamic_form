{
  "title": "Complete Component Showcase",
  "description": "This schema demonstrates all available components in the dynamic form renderer",
  "components": [
    {
      "id": "section-title",
      "type": "text",
      "name": "sectionTitle",
      "value": "ðŸŽ¯ Form Input Components",
      "disabled": true,
      "className": "text-2xl font-bold text-blue-600 mb-4"
    },
    {
      "id": "firstName",
      "type": "text",
      "name": "firstName",
      "label": "First Name",
      "placeholder": "Enter your first name",
      "required": true,
      "validation": [
        { "type": "required", "message": "First name is required" },
        { "type": "min", "value": 2, "message": "Must be at least 2 characters" }
      ]
    },
    {
      "id": "email",
      "type": "email",
      "name": "email",
      "label": "Email Address",
      "placeholder": "user@example.com",
      "required": true,
      "validation": [
        { "type": "required", "message": "Email is required" },
        { "type": "email", "message": "Please enter a valid email" }
      ]
    },
    {
      "id": "password",
      "type": "password",
      "name": "password",
      "label": "Password",
      "placeholder": "Enter your password",
      "required": true
    },
    {
      "id": "age",
      "type": "number",
      "name": "age",
      "label": "Age",
      "placeholder": "Enter your age",
      "min": 18,
      "max": 100
    },
    {
      "id": "birthDate",
      "type": "date",
      "name": "birthDate",
      "label": "Birth Date"
    },
    {
      "id": "appointmentTime",
      "type": "time",
      "name": "appointmentTime",
      "label": "Appointment Time"
    },
    {
      "id": "bio",
      "type": "textarea",
      "name": "bio",
      "label": "Biography",
      "placeholder": "Tell us about yourself...",
      "rows": 4
    },
    {
      "id": "country",
      "type": "select",
      "name": "country",
      "label": "Country",
      "placeholder": "Select your country",
      "options": [
        { "value": "us", "label": "United States" },
        { "value": "ca", "label": "Canada" },
        { "value": "uk", "label": "United Kingdom" },
        { "value": "au", "label": "Australia" },
        { "value": "de", "label": "Germany" }
      ]
    },
    {
      "id": "gender",
      "type": "radio",
      "name": "gender",
      "label": "Gender",
      "options": [
        { "value": "male", "label": "Male" },
        { "value": "female", "label": "Female" },
        { "value": "other", "label": "Other" },
        { "value": "prefer-not-to-say", "label": "Prefer not to say" }
      ]
    },
    {
      "id": "interests",
      "type": "checkbox",
      "name": "interests",
      "label": "Interests",
      "options": [
        { "value": "technology", "label": "Technology" },
        { "value": "sports", "label": "Sports" },
        { "value": "music", "label": "Music" },
        { "value": "travel", "label": "Travel" },
        { "value": "cooking", "label": "Cooking" }
      ]
    },
    {
      "id": "newsletter",
      "type": "checkbox",
      "name": "newsletter",
      "label": "Subscribe to Newsletter",
      "options": [
        { "value": "yes", "label": "Yes, I want to receive updates" }
      ]
    },
    {
      "id": "profilePicture",
      "type": "file",
      "name": "profilePicture",
      "label": "Profile Picture",
      "accept": "image/*",
      "multiple": false
    },
    {
      "id": "documents",
      "type": "file",
      "name": "documents",
      "label": "Supporting Documents",
      "accept": ".pdf,.doc,.docx",
      "multiple": true
    },
    {
      "id": "ui-section-title",
      "type": "text",
      "name": "uiSectionTitle",
      "value": "ðŸŽ¨ UI Components",
      "disabled": true,
      "className": "text-2xl font-bold text-green-600 mb-4 mt-8"
    },
    {
      "id": "primary-button",
      "type": "button",
      "label": "Primary Button",
      "variant": "primary",
      "onClick": "console.log('Primary button clicked')"
    },
    {
      "id": "secondary-button",
      "type": "button",
      "label": "Secondary Button",
      "variant": "secondary",
      "onClick": "console.log('Secondary button clicked')"
    },
    {
      "id": "progress-demo",
      "type": "progress-bar",
      "value": 75,
      "max": 100,
      "label": "Upload Progress",
      "variant": "success",
      "showPercentage": true,
      "className": "mb-4"
    },
    {
      "id": "notification-success",
      "type": "notification",
      "variant": "success",
      "title": "Success!",
      "message": "Your form has been submitted successfully.",
      "duration": 0,
      "className": "mb-4"
    },
    {
      "id": "notification-info",
      "type": "notification",
      "variant": "info",
      "title": "Information",
      "message": "Please review your information before submitting.",
      "duration": 0,
      "className": "mb-4"
    },
    {
      "id": "badge-active",
      "type": "badge",
      "text": "Active",
      "variant": "success",
      "size": "md",
      "className": "mr-2"
    },
    {
      "id": "badge-pending",
      "type": "badge",
      "text": "Pending",
      "variant": "warning",
      "size": "md",
      "className": "mr-2"
    },
    {
      "id": "badge-inactive",
      "type": "badge",
      "text": "Inactive",
      "variant": "danger",
      "size": "md",
      "className": "mr-2"
    },
    {
      "id": "breadcrumbs-demo",
      "type": "breadcrumbs",
      "items": [
        { "label": "Home", "href": "#" },
        { "label": "Forms", "href": "#" },
        { "label": "Components", "href": "#" },
        { "label": "Showcase", "current": true }
      ],
      "separator": ">",
      "className": "mb-4"
    },
    {
      "id": "chips-demo",
      "type": "chips",
      "items": [
        { "id": "react", "label": "React", "removable": true },
        { "id": "typescript", "label": "TypeScript", "removable": true },
        { "id": "tailwind", "label": "TailwindCSS", "removable": true },
        { "id": "nextjs", "label": "Next.js", "removable": true }
      ],
      "selectable": true,
      "selected": ["react", "typescript"],
      "variant": "outlined",
      "className": "mb-4"
    },
    {
      "id": "tabs-demo",
      "type": "tabs",
      "tabs": [
        {
          "id": "overview",
          "label": "Overview",
          "content": [
            {
              "id": "overview-text",
              "type": "text",
              "name": "overviewText",
              "value": "This is the overview tab content. It contains general information about the form components.",
              "disabled": true,
              "className": "p-4 bg-gray-50 rounded"
            }
          ]
        },
        {
          "id": "details",
          "label": "Details",
          "content": [
            {
              "id": "details-text",
              "type": "text",
              "name": "detailsText",
              "value": "This is the details tab content. It contains more specific information about each component.",
              "disabled": true,
              "className": "p-4 bg-blue-50 rounded"
            }
          ]
        },
        {
          "id": "settings",
          "label": "Settings",
          "content": [
            {
              "id": "settings-text",
              "type": "text",
              "name": "settingsText",
              "value": "This is the settings tab content. Configure your preferences here.",
              "disabled": true,
              "className": "p-4 bg-green-50 rounded"
            }
          ]
        }
      ],
      "defaultTab": "overview",
      "className": "mb-6"
    },
    {
      "id": "stepper-demo",
      "type": "stepper",
      "steps": [
        { "id": "step1", "label": "Personal Info", "description": "Enter your basic information" },
        { "id": "step2", "label": "Preferences", "description": "Select your preferences" },
        { "id": "step3", "label": "Review", "description": "Review your information" },
        { "id": "step4", "label": "Submit", "description": "Submit your form" }
      ],
      "currentStep": 2,
      "className": "mb-6"
    },
    {
      "id": "accordion-demo",
      "type": "accordion",
      "panels": [
        {
          "id": "panel1",
          "title": "What is a dynamic form renderer?",
          "content": [
            {
              "id": "accordion-answer1",
              "type": "text",
              "name": "answer1",
              "value": "A dynamic form renderer is a system that generates form components and UI elements based on JSON configuration schemas, allowing for flexible and reusable form creation.",
              "disabled": true,
              "className": "text-gray-600"
            }
          ]
        },
        {
          "id": "panel2",
          "title": "How does validation work?",
          "content": [
            {
              "id": "accordion-answer2",
              "type": "text",
              "name": "answer2",
              "value": "Validation is configured through validation rules in the JSON schema. Each field can have multiple validation rules like required, email format, minimum length, etc.",
              "disabled": true,
              "className": "text-gray-600"
            }
          ]
        },
        {
          "id": "panel3",
          "title": "Can I customize the styling?",
          "content": [
            {
              "id": "accordion-answer3",
              "type": "text",
              "name": "answer3",
              "value": "Yes! Every component supports custom className and style props. The system is built with TailwindCSS and supports full customization.",
              "disabled": true,
              "className": "text-gray-600"
            }
          ]
        }
      ],
      "defaultOpen": ["panel1"],
      "allowMultiple": true,
      "className": "mb-6"
    },
    {
      "id": "table-demo",
      "type": "table",
      "columns": [
        { "key": "id", "title": "ID" },
        { "key": "name", "title": "Name" },
        { "key": "email", "title": "Email" },
        { "key": "role", "title": "Role" },
        { "key": "status", "title": "Status" }
      ],
      "data": [
        { "id": 1, "name": "John Doe", "email": "john@example.com", "role": "Admin", "status": "Active" },
        { "id": 2, "name": "Jane Smith", "email": "jane@example.com", "role": "User", "status": "Active" },
        { "id": 3, "name": "Bob Johnson", "email": "bob@example.com", "role": "Editor", "status": "Inactive" },
        { "id": 4, "name": "Alice Brown", "email": "alice@example.com", "role": "User", "status": "Active" },
        { "id": 5, "name": "Charlie Wilson", "email": "charlie@example.com", "role": "Admin", "status": "Pending" }
      ],
      "sortable": true,
      "pagination": { "pageSize": 3 },
      "className": "mb-6"
    },
    {
      "id": "grid-demo",
      "type": "grid",
      "columns": 3,
      "gap": "1rem",
      "children": [
        {
          "id": "card-1",
          "type": "card",
          "header": {
            "id": "card-1-header",
            "type": "text",
            "name": "card1Header",
            "value": "Feature 1",
            "disabled": true,
            "className": "font-semibold text-lg"
          },
          "content": [
            {
              "id": "card-1-content",
              "type": "text",
              "name": "card1Content",
              "value": "This card demonstrates how content can be dynamically rendered within a grid layout.",
              "disabled": true,
              "className": "text-gray-600"
            }
          ],
          "className": "h-40 border-l-4 border-blue-500"
        },
        {
          "id": "card-2",
          "type": "card",
          "header": {
            "id": "card-2-header",
            "type": "text",
            "name": "card2Header",
            "value": "Feature 2",
            "disabled": true,
            "className": "font-semibold text-lg"
          },
          "content": [
            {
              "id": "card-2-content",
              "type": "text",
              "name": "card2Content",
              "value": "Cards can contain any type of content and can be styled individually or as a group.",
              "disabled": true,
              "className": "text-gray-600"
            }
          ],
          "className": "h-40 border-l-4 border-green-500"
        },
        {
          "id": "card-3",
          "type": "card",
          "header": {
            "id": "card-3-header",
            "type": "text",
            "name": "card3Header",
            "value": "Feature 3",
            "disabled": true,
            "className": "font-semibold text-lg"
          },
          "content": [
            {
              "id": "card-3-content",
              "type": "text",
              "name": "card3Content",
              "value": "The grid system is responsive and automatically adjusts to different screen sizes.",
              "disabled": true,
              "className": "text-gray-600"
            }
          ],
          "className": "h-40 border-l-4 border-purple-500"
        }
      ],
      "className": "mb-6"
    },
    {
      "id": "modal-demo",
      "type": "modal",
      "trigger": {
        "id": "modal-trigger",
        "type": "button",
        "label": "Open Modal",
        "variant": "primary"
      },
      "title": "Example Modal",
      "content": [
        {
          "id": "modal-content",
          "type": "text",
          "name": "modalContent",
          "value": "This is an example modal dialog. It can contain any type of content including forms, text, images, and other components.",
          "disabled": true,
          "className": "text-gray-600 mb-4"
        },
        {
          "id": "modal-form-field",
          "type": "text",
          "name": "modalField",
          "label": "Example Field",
          "placeholder": "Enter some text..."
        }
      ],
      "size": "md",
      "className": "mb-6"
    }
  ],
  "initialValues": {
    "firstName": "John",
    "email": "john@example.com",
    "age": 30,
    "country": "us",
    "gender": "male",
    "interests": ["technology", "travel"],
    "newsletter": ["yes"]
  },
  "onSubmit": "console.log('Form submitted with data:', data)"
}
